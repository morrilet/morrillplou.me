<!doctype html>
<html>
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1">

        <title>Sites | {{ title }}</title>

        <!-- This should be swapped, maybe. A base page css split into post and portfolio-item would be best. -->
        <link rel="stylesheet" type="text/css" href="/styles/post.css"/>
        <link rel="stylesheet" type="text/css" href="/styles/site.css"/>
        <link rel="stylesheet" type="text/css" href="/bin/glightbox/css/glightbox.min.css"/>
    </head>
    <body>
        {% include components/header %}

        <div id="title-wrapper">
            <div id="title-image" style="background-image:url('{{ image }}')"></div>
            <div id="title-header">
                <h1 id="title-header-text">{{ title }}</h1>
                <p id="title-header-date-posted">
                    <i class="fas fa-upload"></i>
                    {{ page.date | toUTCString }}
                </p>
                {% if date_modified %}
                    <p id="title-header-date-updated">
                        <i class="fas fa-pencil-alt"></i>
                        {{ date_modified | toUTCString }}
                    </p>
                {% endif %}
            </div>
        </div>
        <div id='content' class='responsive-gutters responsive-line-height'>
            <div id='screenshots' class=''>
                {% for video_url in videos %}
                    <span class="video-container">
                        <iframe src="{{ video_url }}" 
                            frameborder="0" 
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                            allowfullscreen>
                        </iframe>
                    </span>
                {% endfor %}
                {% for screenshot in screenshots %}
                    <img alt="{{ screenshot.alt }}" src="{{ screenshot.src }}" class="glightbox" data-glightbox="description: {{ screenshot.alt }}"/>
                {% endfor %}
            </div>
            <!-- <div id="content-wrapper"> -->
                <div id="description">
                    <div id="download-section">
                        <div class="link-container">
                            <a class="no-decoration" href="{{ live_url }}" target="blank">
                                <p id='label'>View Live Site</p>
                            </a>
                        </div>
                    </div>

                    {{ content }}
                </div>
            <!-- </div> -->
        </div>
    </body>
    <script type="module" src="/js/glightbox_controller.js"></script>
    <script src="https://kit.fontawesome.com/61329f8a74.js" crossorigin="anonymous"></script>
</html>