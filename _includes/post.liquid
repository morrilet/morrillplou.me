<!doctype html>
<html>
    <head>
        <meta charset="utf-8"/>
        <title>Blog | {{ title }}</title>
        <link rel="stylesheet" type="text/css" href="/styles/post.css"/>
        <link rel="stylesheet" type="text/css" href="/styles/prism/themes/okaidia.css"/>
    </head>
    <body>
        <header>
            <div id="title-avatar">
                <img src="https://via.placeholder.com/64"/>
            </div>
            <ul id="title-menu">
                <li><a href="/" class="inverted">Home</a></li>
                <li><a href="/" class="inverted">Portfolio</a></li>
                <li><a href="/" class="inverted">About</a></li>
                <li><button class="inverted" href="/">Contact</button></li>
            </ul>
            <div id='title-progress-bar'></div>
        </header>
        <div id="title-wrapper">
            <div id="title-image" style="background-image:url('{{ image }}')"></div>
            <div id="title-header">
                <h1>{{ title }}</h1>
            </div>
        </div>
        <div id='content'>
            {{ content }}
        </div>
    </body>
    <script type="text/javascript" src="/js/progress_bar.js"></script>
</html>