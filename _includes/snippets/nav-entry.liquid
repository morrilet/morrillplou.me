<li class="nav-entry">
    {% if item.data.thumbnail %}
        {% render 'snippets/thumbnail', image: item.data.thumbnail, url: item.url, position: item.data.thumbnail_position %}
    {% else %}
        {% render 'snippets/thumbnail', image: item.data.image, url: item.url, position: item.data.thumbnail_position %}
    {% endif %}

    <div class="nav-entry-data">
        <span class='nav-entry-title-bar'>
            <a class='nav-entry-title' href={{ item.url }}>{{ item.data.title }}</a>
            <ul class='nav-entry-tags'>
                {% for tag in item.data.innerTags %}
                    <li>{{ tag }}</li>
                {% endfor %}
            </ul>
        </span>
        {% if not hideExcerpt %}
            {% excerpt item %}
        {% endif  %}
    </div>
</li>